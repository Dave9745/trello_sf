{%  extends "::base.html.twig" %}
    {%  block title 'New task' %}

    {%  block header %}
        <h1>Your new task</h1>
    {%  endblock %}

    {% block content %}

        {{ form_start(form, {'attr': {'class': 'form-horizontal' }}) }}
        {{ form_errors(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.status) }}
        {{ form_row(form.category) }}
        {{ form_widget(form) }}
        <input type="submit" value="post" />
        {{ form_end(form) }}


    {% endblock %}

