{% extends 'base.html.twig' %}

{%  block header %}
    <h1>Here is your list...</h1>
{%  endblock %}

    {% block content %}
        {% for category in categories %}
            <div class="col-md-3">
                <h2>{{ category.name }} <span class="badge">1</span></h2>
                    {% for task in category.tasks %}

                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <a href="{{ path('app_task_edit', {id:task.id}) }}">{{ task.name }}</a><br/>
                                </div>
                            </div>

                    {% else %}
                        No tasks
                    {% endfor %}
            </div>
        {% endfor %}

    {% endblock %}

    {%  block footer %}
        {{ parent() }}
        blabla
    {%  endblock %}



